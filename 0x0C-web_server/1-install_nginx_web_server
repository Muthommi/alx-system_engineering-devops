#!/usr/bin/env bash
# This script installs Nginx, configutrs it to serve "Hello World" and
# Restarts Nginx without using systemct1

apt-get update -y
apt-get install nginx -y

echo "Hello World!" > /var/www/html/index.html

service nginx start

service nginx restart

echo "Nginx installed and configured successfully. Visit http://localhost to see the 'Hello World!' message"
