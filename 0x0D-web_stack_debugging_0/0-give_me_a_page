# Pull the Ubuntu Docker image and run the container
docker run -d -ti ubuntu:16.04

# Get the container ID
docker ps

# Access the container
docker exec -ti /bin/bash

# Update the package list and install Apache
apt-get update
apt-get install -y apache2

# create the index.html file with "Hello Holberton"
echo "Hello Holberton" > /var/www/html/index.html

# Start the Apache device
service apache2 start

# Exit the container
exit

# Run the container with port mapping
docker run -p 8080:80 -d -it 

# Test if the container is returning "Hello Holberton"
curl 0:8080
